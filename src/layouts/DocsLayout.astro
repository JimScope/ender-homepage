---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props

const sidebar = [
  {
    title: 'Getting Started',
    items: [
      { title: 'Introduction', href: '/docs/introduction' },
      { title: 'Quick Start', href: '/docs/quickstart' },
      { title: 'Installation', href: '/docs/installation' },
    ]
  },
  {
    title: 'Devices',
    items: [
      { title: 'Android App', href: '/docs/android-app' },
      { title: 'USB Modems', href: '/docs/usb-modems' },
      { title: 'Device Management', href: '/docs/device-management' },
    ]
  },
  {
    title: 'API Reference',
    items: [
      { title: 'Authentication', href: '/docs/api/auth' },
      { title: 'Send SMS', href: '/docs/api/send-sms' },
      { title: 'Message Status', href: '/docs/api/status' },
      { title: 'Webhooks', href: '/docs/api/webhooks' },
    ]
  },
  {
    title: 'Guides',
    items: [
      { title: 'Docker Deployment', href: '/docs/guides/docker' },
      { title: 'Nginx Reverse Proxy', href: '/docs/guides/nginx' },
      { title: 'Multi-tenant Setup', href: '/docs/guides/multi-tenant' },
    ]
  },
]

const currentPath = Astro.url.pathname
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description || 'Ender Documentation'} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Libre+Baskerville:wght@400;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title} - Ender Docs</title>
  </head>
  <body class="antialiased">
    <div class="min-h-screen flex flex-col">
      <!-- Header -->
      <header class="sticky top-0 z-50 bg-[#f5f1eb]/95 backdrop-blur-sm border-b border-neutral-200">
        <div class="max-w-[90rem] mx-auto px-6 lg:px-8">
          <nav class="flex items-center justify-between h-14">
            <div class="flex items-center gap-8">
              <a href="/" class="flex items-center gap-1">
                <span class="text-[#e94d1f] text-2xl font-bold">:</span>
                <span class="font-serif font-bold text-lg tracking-tight uppercase">Ender</span>
              </a>
              <a href="/docs" class="text-sm font-medium text-neutral-600 hover:text-neutral-900 transition-colors">
                Docs
              </a>
            </div>
            <div class="flex items-center gap-4">
              <a href="https://github.com/ender-sms" class="text-neutral-600 hover:text-neutral-900 transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                </svg>
              </a>
              <a href="/dashboard" class="inline-flex items-center px-3 py-1.5 bg-neutral-900 text-white text-sm font-medium rounded-lg hover:bg-neutral-800 transition-colors">
                Dashboard
              </a>
            </div>
          </nav>
        </div>
      </header>

      <div class="flex-1 max-w-[90rem] mx-auto w-full flex">
        <!-- Sidebar -->
        <aside class="hidden lg:block w-64 shrink-0 border-r border-neutral-200">
          <nav class="sticky top-14 p-6 h-[calc(100vh-3.5rem)] overflow-y-auto">
            {sidebar.map((section) => (
              <div class="mb-6">
                <h3 class="text-xs font-semibold text-neutral-500 uppercase tracking-wider mb-3">
                  {section.title}
                </h3>
                <ul class="space-y-1">
                  {section.items.map((item) => (
                    <li>
                      <a
                        href={item.href}
                        class:list={[
                          'block py-1.5 px-3 text-sm rounded-lg transition-colors',
                          currentPath === item.href || currentPath === item.href + '/'
                            ? 'bg-neutral-900 text-white'
                            : 'text-neutral-600 hover:text-neutral-900 hover:bg-neutral-100'
                        ]}
                      >
                        {item.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </nav>
        </aside>

        <!-- Main content -->
        <main class="flex-1 min-w-0 px-6 lg:px-12 py-8 lg:py-12">
          <article class="max-w-3xl prose prose-neutral prose-headings:font-serif prose-code:font-mono prose-code:text-sm prose-code:bg-neutral-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:before:content-none prose-code:after:content-none prose-pre:bg-neutral-900 prose-pre:text-neutral-100">
            <slot />
          </article>
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  .prose pre {
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  .prose pre code {
    background-color: transparent;
    padding: 0;
  }
</style>

<section id="features" class="py-24 lg:py-32">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="max-w-3xl">
      <h2 class="font-serif text-3xl sm:text-4xl lg:text-5xl font-bold text-neutral-900 leading-tight">
        Built for developers
      </h2>
      <p class="mt-6 text-lg text-neutral-600 leading-relaxed">
        Ender is for devs who want to own their SMS infrastructure. Perfect for side projects, startups, or anyone tired of paying per-message fees to big providers.
      </p>
    </div>

    <!-- Image grid with accent circles -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
      <div class="relative">
        <div class="aspect-[4/3] bg-neutral-200 overflow-hidden">
          <div class="w-full h-full bg-gradient-to-br from-neutral-300 to-neutral-400 flex items-center justify-center">
            <svg class="w-24 h-24 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
            </svg>
          </div>
        </div>
        <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-[#e94d1f] rounded-full"></div>
      </div>

      <div class="relative mt-12 md:mt-24">
        <div class="aspect-[4/3] bg-neutral-200 overflow-hidden">
          <div class="w-full h-full bg-gradient-to-br from-neutral-300 to-neutral-400 flex items-center justify-center">
            <svg class="w-24 h-24 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
          </div>
        </div>
        <div class="absolute -top-6 left-1/2 -translate-x-1/2 w-24 h-24 bg-[#e94d1f] rounded-full"></div>
      </div>
    </div>
  </div>
</section>

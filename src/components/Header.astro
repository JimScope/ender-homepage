---
interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<header class:list={['py-8 lg:py-12', className]}>
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <nav class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-1">
        <span class="text-[#e94d1f] text-3xl font-bold">:</span>
        <span class="font-serif font-bold text-2xl tracking-tight uppercase">Ender</span>
      </a>

      <a
        href="#contact"
        class="text-neutral-900 hover:text-[#e94d1f] transition-colors text-sm font-medium flex items-center gap-1"
      >
        Get in touch
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </nav>
  </div>
</header>

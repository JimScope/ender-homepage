---
interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<header class:list={['py-8 lg:py-12', className]}>
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <nav class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-1">
        <span class="text-[#e94d1f] text-3xl font-bold">:</span>
        <span class="font-serif font-bold text-2xl tracking-tight uppercase">Ender</span>
      </a>

      <div class="flex items-center gap-6">
        <a
          href="/docs"
          class="text-neutral-600 hover:text-neutral-900 transition-colors text-sm font-medium"
        >
          Docs
        </a>
        <a
          href="#faq"
          class="text-neutral-600 hover:text-neutral-900 transition-colors text-sm font-medium"
        >
          FAQ
        </a>
        <a
          href="https://github.com/ender-sms"
          class="text-neutral-600 hover:text-neutral-900 transition-colors text-sm font-medium"
        >
          GitHub
        </a>
        <button onclick="openWaitlistModal()" class="btn btn-primary">
          Dashboard
          <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </button>
      </div>
    </nav>
  </div>
</header>

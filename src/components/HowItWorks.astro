---
import CodeBlock from './CodeBlock.astro'

const capabilities = [
  {
    title: 'Your Devices',
    description: 'Turn your old Android phones or USB modems into SMS gateways. No special hardware needed.',
  },
  {
    title: 'Webhooks',
    description: 'Get notified on delivery, failures, and incoming messages. Integrate with anything.',
  },
  {
    title: 'Quotas & Limits',
    description: 'Built-in quota system to manage usage across users and API keys.',
  },
  {
    title: 'REST API',
    description: 'Clean, documented API. Send messages, manage devices, check status. That\'s it.',
  },
  {
    title: 'Multi-tenant',
    description: 'Create users, assign devices, set permissions. Great for teams or reselling.',
  },
  {
    title: 'Dashboard',
    description: 'Web UI to manage everything. Or use the API if that\'s your thing.',
  },
]

const codeExample = `curl -X POST https://your-server.com/api/sms/send \\
  -H "X-API-Key: ek_your_api_key" \\
  -H "Content-Type: application/json" \\
  -d '{"recipients": ["+1234567890"], "body": "Hello from Ender!"}'`
---

<section id="how-it-works" class="py-24 lg:py-32 bg-neutral-900 text-white">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="max-w-3xl">
      <h2 class="font-serif text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight">
        What's included
      </h2>
      <p class="mt-6 text-lg text-neutral-400 leading-relaxed">
        Everything you need to run your own SMS gateway. Self-host it, own your data, pay nothing per message.
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-12">
      {capabilities.map((item) => (
        <div class="group">
          <div class="flex items-start gap-4">
            <div class="w-3 h-3 mt-2 bg-[#2dd4a8] rounded-full shrink-0"></div>
            <div>
              <h3 class="text-lg font-semibold text-white group-hover:text-[#2dd4a8] transition-colors">
                {item.title}
              </h3>
              <p class="mt-2 text-neutral-400 leading-relaxed">
                {item.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Code example -->
    <div class="mt-20">
      <p class="text-sm text-neutral-500 uppercase tracking-wider mb-4">Quick Start</p>
      <CodeBlock lang="bash" code={codeExample} />
    </div>
  </div>
</section>

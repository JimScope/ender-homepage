---
// WaitlistModal - Shows when cloud version is not yet available
---

<div id="waitlist-modal" class="modal-overlay hidden">
  <div class="modal-container">
    <button id="modal-close" class="modal-close" aria-label="Close modal">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <div class="modal-content">
      <div class="modal-icon">
        <svg class="w-12 h-12 text-[#e94d1f]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>

      <h2 class="modal-title">Coming Soon</h2>
      <p class="modal-description">
        The cloud version of Ender is not available yet. Leave your contact and we'll notify you when it's ready.
      </p>

      <form id="waitlist-form" class="modal-form">
        <div class="form-group">
          <label for="contact-type" class="form-label">Notify me via</label>
          <select id="contact-type" class="form-select" required>
            <option value="email">Email</option>
            <option value="telegram">Telegram</option>
          </select>
        </div>

        <div class="form-group">
          <label for="contact-value" class="form-label">
            <span id="contact-label">Email address</span>
          </label>
          <input
            type="text"
            id="contact-value"
            class="form-input"
            placeholder="you@example.com"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary w-full justify-center">
          Notify me
          <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
          </svg>
        </button>
      </form>

      <div id="success-message" class="success-message hidden">
        <svg class="w-12 h-12 text-green-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <p class="text-neutral-900 font-medium">You're on the list!</p>
        <p class="text-neutral-600 text-sm mt-1">We'll notify you when the cloud version is ready.</p>
      </div>
    </div>
  </div>
</div>

<style>
  .modal-overlay {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .modal-overlay.hidden {
    display: none;
  }

  .modal-container {
    background: white;
    border-radius: 1rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    max-width: 400px;
    width: 100%;
    position: relative;
    animation: modal-enter 0.2s ease-out;
  }

  @keyframes modal-enter {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: #737373;
    padding: 0.25rem;
    border-radius: 0.375rem;
    transition: color 0.15s;
  }

  .modal-close:hover {
    color: #171717;
  }

  .modal-content {
    padding: 2rem;
    text-align: center;
  }

  .modal-icon {
    margin-bottom: 1rem;
  }

  .modal-title {
    font-family: 'Libre Baskerville', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #171717;
    margin-bottom: 0.5rem;
  }

  .modal-description {
    color: #525252;
    font-size: 0.938rem;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .modal-form {
    text-align: left;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #171717;
    margin-bottom: 0.375rem;
  }

  .form-select,
  .form-input {
    width: 100%;
    padding: 0.625rem 0.875rem;
    border: 1px solid #e5e5e5;
    border-radius: 0.5rem;
    font-size: 0.938rem;
    color: #171717;
    background-color: white;
    transition: border-color 0.15s, box-shadow 0.15s;
  }

  .form-select:focus,
  .form-input:focus {
    outline: none;
    border-color: #e94d1f;
    box-shadow: 0 0 0 3px rgba(233, 77, 31, 0.1);
  }

  .form-input::placeholder {
    color: #a3a3a3;
  }

  .success-message {
    padding: 1rem 0;
  }

  .success-message.hidden {
    display: none;
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin {
    animation: spin 1s linear infinite;
  }
</style>

<script>
  // Google Apps Script URL - Replace with your deployed script URL
  const GOOGLE_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbzXzNg0dQ4VIko5v3IsdjQqpiXY5Rd9fbi6Q3QZEyicR4bD9pp19I22KfE56tS7grssvg/exec';

  const modal = document.getElementById('waitlist-modal');
  const closeBtn = document.getElementById('modal-close');
  const form = document.getElementById('waitlist-form') as HTMLFormElement;
  const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
  const contactType = document.getElementById('contact-type') as HTMLSelectElement;
  const contactValue = document.getElementById('contact-value') as HTMLInputElement;
  const contactLabel = document.getElementById('contact-label');
  const successMessage = document.getElementById('success-message');

  // Update input based on contact type
  contactType?.addEventListener('change', () => {
    if (contactType.value === 'email') {
      contactValue.type = 'email';
      contactValue.placeholder = 'you@example.com';
      if (contactLabel) contactLabel.textContent = 'Email address';
    } else {
      contactValue.type = 'text';
      contactValue.placeholder = '@username';
      if (contactLabel) contactLabel.textContent = 'Telegram username';
    }
  });

  // Close modal
  function closeModal() {
    modal?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  // Open modal
  function openWaitlistModal() {
    modal?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    // Reset form state
    form?.classList.remove('hidden');
    form?.reset();
    successMessage?.classList.add('hidden');
    if (submitBtn) {
      submitBtn.disabled = false;
      submitBtn.innerHTML = `
        Notify me
        <svg class="btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
      `;
    }
  }

  closeBtn?.addEventListener('click', closeModal);

  // Close on backdrop click
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      closeModal();
    }
  });

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
      closeModal();
    }
  });

  // Handle form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const type = contactType?.value;
    const contact = contactValue?.value;

    // Disable button and show loading
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.innerHTML = `
        <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Sending...
      `;
    }

    try {
      // Send to Google Sheets
      await fetch(GOOGLE_SCRIPT_URL, {
        method: 'POST',
        mode: 'no-cors', // Required for Google Apps Script
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ type, contact }),
      });

      // Show success (no-cors doesn't return response, so we assume success)
      form.classList.add('hidden');
      successMessage?.classList.remove('hidden');

      // Auto-close after 3 seconds
      setTimeout(() => {
        closeModal();
      }, 3000);
    } catch (error) {
      console.error('Error submitting form:', error);
      // Still show success since no-cors doesn't give us error info
      form.classList.add('hidden');
      successMessage?.classList.remove('hidden');
      setTimeout(() => {
        closeModal();
      }, 3000);
    }
  });

  // Expose openWaitlistModal globally
  (window as any).openWaitlistModal = openWaitlistModal;
</script>

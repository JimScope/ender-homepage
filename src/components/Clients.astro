---
const clients = [
  'Vercel',
  'Stripe',
  'Linear',
  'Notion',
  'Figma',
  'Webflow',
  'Framer',
  'Supabase',
]
---

<section class="py-20 lg:py-28">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <p class="font-serif text-2xl sm:text-3xl font-bold text-neutral-900 text-center">
      Trusted by developers worldwide
    </p>

    <div class="mt-12 flex flex-wrap items-center justify-center gap-x-12 gap-y-8">
      {clients.map((client) => (
        <span class="text-xl font-medium text-neutral-400 hover:text-neutral-600 transition-colors">
          {client}
        </span>
      ))}
    </div>
  </div>
</section>

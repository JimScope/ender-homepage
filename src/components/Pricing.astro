---
const plans = [
  {
    name: 'Starter',
    price: 'Free',
    description: 'Perfect for testing and small projects',
    features: [
      '1 device',
      '100 messages/month',
      'Basic analytics',
      'Email support',
    ],
    cta: 'Get started',
    highlighted: false,
  },
  {
    name: 'Pro',
    price: '$29',
    period: '/month',
    description: 'For growing businesses and teams',
    features: [
      '10 devices',
      '5,000 messages/month',
      'Advanced analytics',
      'Webhooks',
      'Priority support',
      'API access',
    ],
    cta: 'Start free trial',
    highlighted: true,
  },
  {
    name: 'Enterprise',
    price: 'Custom',
    description: 'For large-scale operations',
    features: [
      'Unlimited devices',
      'Unlimited messages',
      'Custom integrations',
      'Dedicated support',
      'SLA guarantee',
      'On-premise option',
    ],
    cta: 'Contact sales',
    highlighted: false,
  },
]
---

<section id="pricing" class="py-20 lg:py-32 bg-neutral-50">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center max-w-2xl mx-auto">
      <h2 class="text-3xl sm:text-4xl font-bold text-neutral-900">
        Simple, transparent pricing
      </h2>
      <p class="mt-4 text-lg text-neutral-600">
        Choose the plan that fits your needs. All plans include core features.
      </p>
    </div>

    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
      {plans.map((plan) => (
        <div class:list={[
          'rounded-2xl p-8 border',
          plan.highlighted
            ? 'bg-neutral-900 border-neutral-900 text-white'
            : 'bg-white border-neutral-200'
        ]}>
          <h3 class:list={[
            'text-lg font-semibold',
            plan.highlighted ? 'text-white' : 'text-neutral-900'
          ]}>
            {plan.name}
          </h3>
          <div class="mt-4 flex items-baseline">
            <span class:list={[
              'text-4xl font-bold',
              plan.highlighted ? 'text-white' : 'text-neutral-900'
            ]}>
              {plan.price}
            </span>
            {plan.period && (
              <span class:list={[
                'ml-1',
                plan.highlighted ? 'text-neutral-400' : 'text-neutral-500'
              ]}>
                {plan.period}
              </span>
            )}
          </div>
          <p class:list={[
            'mt-2',
            plan.highlighted ? 'text-neutral-400' : 'text-neutral-600'
          ]}>
            {plan.description}
          </p>
          <ul class="mt-6 space-y-3">
            {plan.features.map((feature) => (
              <li class="flex items-center gap-3">
                <svg
                  class:list={[
                    'w-5 h-5 shrink-0',
                    plan.highlighted ? 'text-primary-400' : 'text-primary-600'
                  ]}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class:list={[
                  plan.highlighted ? 'text-neutral-300' : 'text-neutral-600'
                ]}>
                  {feature}
                </span>
              </li>
            ))}
          </ul>
          <a
            href="/register"
            class:list={[
              'mt-8 block w-full text-center px-6 py-3 rounded-lg font-medium transition-colors',
              plan.highlighted
                ? 'bg-white text-neutral-900 hover:bg-neutral-100'
                : 'bg-neutral-900 text-white hover:bg-neutral-800'
            ]}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

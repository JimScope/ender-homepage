---
// Generate random positions for accent dots
const accentDots = [
  { top: '15%', left: '5%' },
  { top: '25%', left: '20%' },
  { top: '35%', left: '12%' },
  { top: '45%', left: '25%' },
  { top: '55%', left: '8%' },
  { top: '20%', left: '45%' },
  { top: '40%', left: '50%' },
  { top: '60%', left: '42%' },
  { top: '30%', left: '75%' },
  { top: '50%', left: '80%' },
  { top: '70%', left: '70%' },
  { top: '15%', left: '90%' },
  { top: '45%', left: '88%' },
  { top: '65%', left: '95%' },
]
---

<section class="relative min-h-[80vh] dot-pattern overflow-hidden">
  <!-- Accent dots scattered across the background -->
  {accentDots.map((dot) => (
    <div
      class="absolute w-3 h-3 bg-[#e94d1f] rounded-full"
      style={`top: ${dot.top}; left: ${dot.left};`}
    />
  ))}

  <div class="max-w-7xl mx-auto px-6 lg:px-8 pt-16 lg:pt-24">
    <div class="max-w-2xl ml-auto">
      <h1 class="font-serif text-4xl sm:text-5xl lg:text-[3.5rem] font-bold text-neutral-900 leading-[1.1]">
        Ender is the SMS gateway for your most demanding messaging needs.
      </h1>
      <a
        href="#contact"
        class="mt-8 inline-flex items-center gap-2 text-neutral-900 hover:text-[#e94d1f] transition-colors text-base font-medium"
      >
        Schedule a discovery call
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
